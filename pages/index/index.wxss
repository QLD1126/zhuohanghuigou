.container {
  font-size: 14px;
  /* line-height:48rpx; */
  position: relative;
}

/* 定位样式 */
.location {
  height: 80rpx;
  line-height: 80rpx;
}

.location>.img {
  width: 30rpx;
  height: 30rpx;
  margin-bottom: -5rpx;
  margin-right: 5px;

}

.location>.dqdw {
  color: #FF5400;
}

.search {
  position: absolute;
  top: 100rpx;
  z-index: 99;
  margin-left: 84rpx;
  display: flex;
  flex-flow: row nowrap;
  width: 597rpx;
}

.search-input {
  border-radius: 20px;
  width: 100%;
  height: 65rpx;
  width: 550rpx;
  background: #fff;
  color: #666;
  padding-left: 76rpx;
  margin-top: 20rpx;
}

.sous {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: 20rpx;
  top: 26rpx;
}
/* 轮播 */
.swiper-main {
  width: 100%;
  height: 356rpx;
}

.swiper-img {
  width: 100%;
  height: 100%;
}
/* 自定义轮播指示点 */
.wx-swiper-dots {
  position: relative;
  left: unset !important;
  right: 0;
  /* width:10rpx;height: 10rpx; */
}

.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: -5rpx;
}
/* 十张小图片 */
.recom {
  display: flex;
  justify-content: center;
  align-items: space-around;
  flex-flow: row wrap;
  margin-top: 20rpx;
  background: #fff;
  height: 310rpx;

}

.recom .recom-img {
  width: 67rpx;
  height: 67rpx;

}

.recom-list {
  /* width: 100%; */
  flex: 0 0 20%;
  text-align: center;
  margin-bottom: 20rpx;
  padding-top: 20rpx;
}

.text {
  font-size: 22rpx;
  color: #505050;
}

.title01 {
  margin: 40rpx 0 20rpx 0;
  display: block;
  font-size: 32rpx;
  margin-left: 33rpx;
}

.tj-list {
  display: flex;
  /* flex-wrap: wrap; */
  flex-flow: row wrap;
  /* justify-content: space-around; */
  margin: 24rpx;
}

.tj-detail {
  flex: 0 0 46%;
  margin-bottom: 10rpx;
  text-align: center;
  border-radius: 10rpx;
  padding: 10rpx;
  background: #fff;
}

.tj-detail>view {
  text-align: left;
  margin-left: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.detail-info{
  -webkit-line-clamp: 1 !important;
}
.detail-img {
  width: 326rpx;
  height: 323rpx;
  border-radius: 15rpx;

}
.detail-price{
  /* margin-bottom: 20rpx; */
  line-height: 2;
}
.price{font-weight: bold;}